<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Tree -->
    <record id="view_exogena_formato_tree" model="ir.ui.view">
        <field name="name">exogena.formato.list</field>
        <field name="model">exogena.formato</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
                <field name="version"/>
                <field name="tipo_dato"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="view_exogena_formato_form" model="ir.ui.view">
        <field name="name">exogena.formato.form</field>
        <field name="model">exogena.formato</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="version"/>
                        </group>
                        <group>
                            <field name="tipo_dato"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="descripcion"/>
                    </group>
                    <notebook>
                        <page string="Conceptos" name="conceptos">
                            <field name="concepto_ids">
                                <list>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="active" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_exogena_formato" model="ir.actions.act_window">
        <field name="name">Formatos de Exógena</field>
        <field name="res_model">exogena.formato</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>