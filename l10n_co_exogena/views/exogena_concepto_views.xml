<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_exogena_concepto_tree" model="ir.ui.view">
        <field name="name">exogena.concepto.list</field>
        <field name="model">exogena.concepto</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
                <field name="format_id"/>
                <field name="threshold_uvt"/>
            </list>
        </field>
    </record>

    <record id="view_exogena_concepto_form" model="ir.ui.view">
        <field name="name">exogena.concepto.form</field>
        <field name="model">exogena.concepto</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="format_id"/>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="threshold_uvt"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_exogena_concepto" model="ir.actions.act_window"> 
        <field name="name">Conceptos de Ex√≥gena</field>
        <field name="res_model">exogena.concepto</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_by_format': 1}</field>
    </record>

    <record id="action_exogena_report" model="ir.actions.act_window">
        <field name="name">Reportes Generados</field>
        <field name="res_model">exogena.report</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>