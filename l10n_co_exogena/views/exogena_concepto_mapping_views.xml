<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_exogena_concepto_mapping_list" model="ir.ui.view">
        <field name="name">exogena.concepto.mapping.list</field>
        <field name="model">exogena.concepto.mapping</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="concepto_id" widget="many2one_avatar_user"/>
                <field name="mapping_type"/>
                <field name="account_tag_id" column_invisible="[('mapping_type', '!=', 'tag')]"/>
                <field name="account_ids" widget="many2many_tags" column_invisible="[('mapping_type', '!=', 'account')]"/>
                <field name="column_dest"/>
                <field name="move_type"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <record id="view_exogena_concepto_mapping_form" model="ir.ui.view">
        <field name="name">exogena.concepto.mapping.form</field>
        <field name="model">exogena.concepto.mapping</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="concepto_id"/>
                            <field name="column_dest"/>
                            <field name="move_type"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="mapping_type" widget="radio" options="{'horizontal': true}"/>
                            <field name="account_tag_id"
                                   invisible="[('mapping_type', '!=', 'tag')]"
                                   required="[('mapping_type', '=', 'tag')]"/>
                            <field name="account_ids" widget="many2many_tags"
                                   invisible="[('mapping_type', '!=', 'account')]"
                                   required="[('mapping_type', '=', 'account')]"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_exogena_concepto_mapping" model="ir.actions.act_window">
        <field name="name">Mapeo de Conceptos</field>
        <field name="res_model">exogena.concepto.mapping</field>
        <field name="view_mode">list,form</field> <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer mapeo de conceptos.
            </p><p>
                Aqu√≠ es donde conectas tus cuentas contables (o etiquetas de cuentas)
                con los conceptos y columnas requeridos por la DIAN.
            </p>
        </field>
    </record>
</odoo>