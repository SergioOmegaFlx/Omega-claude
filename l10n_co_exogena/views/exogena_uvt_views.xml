<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_exogena_uvt_tree" model="ir.ui.view">
        <field name="name">exogena.uvt.list</field>
        <field name="model">exogena.uvt</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="year"/>
                <field name="value"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
            </field>
    </record>

    <record id="action_exogena_uvt" model="ir.actions.act_window">
        <field name="name">Valores UVT</field>
        <field name="res_model">exogena.uvt</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>