<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_exogena_report_tree" model="ir.ui.view">
        <field name="name">exogena.report.list</field>
        <field name="model">exogena.report</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="format_id"/>
                <field name="year"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state == 'processing'"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <record id="view_exogena_report_form" model="ir.ui.view">
        <field name="name">exogena.report.form</field>
        <field name="model">exogena.report</field>
        <field name="arch" type="xml">
            <form>
                <header>
                     <button name="action_export_to_xml" string="Exportar a XML"
                            type="object" class="btn-primary"
                            invisible="['|', ('state', '!=', 'done'), ('line_f1001_ids', '=', [])]"/>
                    <button name="action_generate_report_data" string="Regenerar Datos"
                            type="object" class="oe_highlight"
                            invisible="[('state', '!=', 'done')]"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="format_id"/>
                            <field name="year"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="send_number" invisible="[('state', '!=', 'done')]"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="xml_file" filename="xml_filename" readonly="1" invisible="not xml_file"/>
                            <field name="xml_filename" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="LÃ­neas del Reporte" name="report_lines">
                            <field name="line_f1001_ids" readonly="1">
                                <list>
                                    <field name="concepto_id"/>
                                    <field name="partner_id"/>
                                    <field name="vat"/>
                                    <field name="pago_deducible" sum="Total"/>
                                    <field name="pago_no_deducible" sum="Total"/>
                                    <field name="retencion_renta" sum="Total"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_exogena_report" model="ir.actions.act_window">
        <field name="name">Reportes Generados</field>
        <field name="res_model">exogena.report</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>