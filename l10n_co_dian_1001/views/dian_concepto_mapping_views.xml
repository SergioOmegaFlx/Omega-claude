<!-- l10n_co_dian_1001/views/dian_concepto_mapping_views.xml -->
<odoo>
    <record id="view_dian_concepto_mapping_tree" model="ir.ui.view">
        <field name="name">dian.concepto.mapping.list</field>
        <field name="model">dian.concepto.mapping</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
                <field name="format_type"/>
            </list>
        </field>
    </record>

    <record id="view_dian_concepto_mapping_form" model="ir.ui.view">
        <field name="name">dian.concepto.mapping.form</field>
        <field name="model">dian.concepto.mapping</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="format_type"/>
                    </group>
                    <group>
                        <field name="base_account_ids" widget="many2many_tags"/>
                        <field name="tax_account_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_dian_concepto_mapping" model="ir.actions.act_window">
        <field name="name">Conceptos DIAN</field>
        <field name="res_model">dian.concepto.mapping</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>
                Configure aqu√≠ los conceptos DIAN y su mapeo a cuentas contables.
            </p>
        </field>
    </record>

    <menuitem id="menu_dian_root"
              name="DIAN"
              parent="account.menu_finance"
              sequence="90"/>

    <menuitem id="menu_dian_conceptos"
              name="Conceptos DIAN"
              parent="menu_dian_root"
              action="action_dian_concepto_mapping"
              sequence="10"/>
</odoo>
